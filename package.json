{
  "name": "rick-morty-api",
  "version": "1.1.0",
  "description": "Rick and Morty API",
  "main": "server.js",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "start": "node ./server.js",
    "dev": "nodemon ./server.js",
    "data": "echo \"MongoURL: $MONGODB_URI\" && mongorestore --host=$MONGODB_URI --drop ./data",
    "test": "nyc --check-coverage --lines 95 mocha --timeout 10000 --exit && nyc report --reporter=text-lcov | coveralls",
    "test:watch": "nodemon --ext js ./test --exec 'mocha --reporter min'",
    "data:transform": "node data/apply-transforms.js"
  },
  "nyc": {
    "exclude": [
      "./helpers/*"
    ]
  },
  "author": "Axel Fuhrmann",
  "license": "BSD-3-Clause",
  "dependencies": {
    "apollo-server-express": "^2.6.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-brute": "^1.0.1",
    "express-brute-mongoose": "^1.1.0",
    "express-validator": "^5.3.1",
    "functional-promises": "^1.7.94",
    "graphql": "^14.3.1",
    "graphql-depth-limit": "^1.1.0",
    "helmet": "^3.20.0",
    "moment": "^2.24.0",
    "mongoose": "^5.5.13",
    "mongoose-mongodb-errors": "0.0.2",
    "morgan": "^1.9.1",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justsml/rick-and-morty-api.git"
  },
  "keywords": [
    "api",
    "rick and morty"
  ],
  "bugs": {
    "url": "https://github.com/justsml/rick-and-morty-api/issues"
  },
  "homepage": "https://github.com/justsml/rick-and-morty-api#readme"
}
